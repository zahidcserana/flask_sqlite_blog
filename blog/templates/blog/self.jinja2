{% extends 'layout/master.jinja2' %}
{% from "pagination.html" import render_pagination with context %}

{% block title %}Posts{% endblock %}

{% block content %}
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <h5 class="card-header">
                    <span>Blog List</span>
                    <a class="float-right action btn btn-secondary" href="{{ url_for('blog.create') }}">
                        <i class="bi bi-plus-circle ms-auto"></i> New
                    </a>
                </h5>

                <div class="card-body">
                    {% for post in posts %}
                    <h5 class="card-title">
                        <a href="{{ url_for('blog.details', id=post['id']) }}">{{ post['title'] }}</a>
                        {% if is_own %}
                        <a style="float: right" href="{{ url_for('blog.update', id=post['id']) }}">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        {% endif %}
                    </h5>
                    <div class="post">
                        <p class="about">by {{ post['username'] }} on {{ post['created'].strftime('%Y-%m-%d') }}</p>
                    </div>
                    {% if not loop.last %}
                    <hr>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <p>{{ render_pagination(data) }}</p>
</section>
{% endblock %}