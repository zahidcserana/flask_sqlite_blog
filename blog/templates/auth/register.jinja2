{% extends 'auth/layout.jinja2' %}

{% block title %}
<div class="pt-4 pb-2">
    <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
    <p class="text-center small">Enter your personal details to create account</p>
</div>
{% endblock %}

{% for message in get_flashed_messages() %}
  <div class="alert alert-warning">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{ message }}
  </div>
{% endfor %}

{% block content %}
<form method="POST" action="/signup" class="row g-3 needs-validation">
    {{ form.csrf_token }}
    <div class="col-12">
        {{ form.name.label(class='form-label') }}
        {{ form.name(placeholder='Your Name', class='form-control') }}
        {% if form.name.errors %}
          <ul class="errors">
            {% for error in form.email.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
    </div>

    <div class="col-12">
        {{ form.email.label(class='form-label') }}
        {{ form.email(placeholder='Email', class='form-control') }}
        {% if form.email.errors %}
          <ul class="errors">
            {% for error in form.email.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
    </div>

    <div class="col-12">
        {{ form.password.label(class='form-label') }}
        {{ form.password(class='form-control') }}
        {% if form.password.errors %}
          <ul class="errors">
            {% for error in form.password.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
    </div>
    <div class="col-12">
        {{ form.confirm.label(class='form-label') }}
        {{ form.confirm(class='form-control') }}
        {% if form.confirm.errors %}
          <ul class="errors">
            {% for error in form.confirm.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
    </div>
    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" name="terms" type="checkbox" value="" id="acceptTerms" required>
            <label class="form-check-label" for="acceptTerms">I agree and accept the <a href="#">terms and
                conditions</a></label>
            <div class="invalid-feedback">You must agree before submitting.</div>
        </div>
    </div>

    <div class="col-12">
        {{ form.submit(class="btn btn-primary w-100") }}
      </div>
    <div class="col-12">
        <p class="small mb-0">Already have an account? <a href="{{ url_for('auth_bp.login') }}">Log in</a></p>
    </div>
</form>
{% endblock %}